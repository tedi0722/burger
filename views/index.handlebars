<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1 class="text-center">Burgers!</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h2 class="text-center">Burgers to be Devoured</h2>
      <ul class="list-unstyled">
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-6">
      <h2 class="text-center">Devoured Burgers</h2>
      <ul class="list-unstyled">
        {{#each burgers}}
          {{#if devoured}}
            <li>
              {{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<div class="container">

  <div class="row">
    <div class="col-sm-12">
      <h2 class="text-center">Add a Burger</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <form class="text-center" action="/api/burgers" method="POST">
        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="burger_name">
        </div>
        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>

</div>



