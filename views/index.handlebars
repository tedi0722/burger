<div class="container">
  <div class="row">
    <div class="col-sm-12 p-3 d-flex justify-content-center align-items-center">
      <img id="burgerimg" src="assets/img/burger.png">
      <h1 class="text-center mb-0">Eat-Da-Burger !</h1>
    </div>
  </div>
</div>

<div class="container mb-4">
  <div class="row">
    <div class="col-sm-6 border-right border-dark px-4">
      <h2 class="text-right border-bottom border-dark p-2">Available Burgers</h2>
      <ul class="list-unstyled">
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-6 px-4">
      <h2 class="text-left border-bottom border-dark p-2">Devoured Burgers</h2>
      <ul class="list-unstyled p-2">
        {{#each burgers}}
          {{#if devoured}}
            <li class="p-1">
              {{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<div class="container">

  <div class="row">
    <div class="col-sm-12">
      <h2 class="text-center p-2">Add a Burger</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <form class="text-center" action="/api/burgers" method="POST">
        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="burger_name">
        </div>
        <button id="add-burger" type="submit">Add Burger</button>
      </form>
    </div>
  </div>

</div>



